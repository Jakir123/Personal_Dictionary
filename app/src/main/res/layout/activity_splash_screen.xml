<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?pageBgColor"
    android:padding="10dp"
    tools:context=".view.activities.SplashScreenActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/tvWelcomeCard"
        style="@style/cardStyle"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardUseCompatPadding="false"
        app:elevation="0dp"
        app:cardBackgroundColor="#07222F"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tvWelcome"
            style="@style/cardPrimaryTextStyle"
            android:layout_gravity="center"
            android:lineSpacingExtra="10sp"
            android:text="@string/welcome"
            android:visibility="gone"
            android:textColor="?titleTextColor"
            android:textAlignment="center"
            android:textSize="24sp" />
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/ic_personal_dictionary__logo_white"
            android:layout_height="match_parent"/>
    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>