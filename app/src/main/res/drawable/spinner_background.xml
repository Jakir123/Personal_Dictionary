<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <item>
        <layer-list>
            <item>
                <shape>
                    <stroke
                        android:width="1dp"
                        android:color="@android:color/holo_blue_dark" />
                    <corners
                        android:bottomRightRadius="@dimen/large_margin"
                        android:bottomLeftRadius="0dp"
                        android:topLeftRadius="@dimen/large_margin"
                        android:topRightRadius="0dp"/>
                    <solid android:color="@color/colorWhite"/>
                    <padding
                        android:bottom="@dimen/small_padding"
                        android:left="@dimen/small_padding"
                        android:right="@dimen/large_padding"
                        android:top="@dimen/small_padding" />
                </shape>
            </item>
            <item>
                <bitmap
                    android:gravity="center_vertical|right"
                    android:tint="@color/colorPrimaryDark"
                    android:src="@android:drawable/arrow_down_float" />
            </item>
        </layer-list>
    </item>
</layer-list>