<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="bottomSheetDialogTheme">@style/bottomSheetDialogTheme</item>
    </style>

    <!-- ActionBar theme. -->
    <style name="ActionBarTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="bottomSheetDialogTheme">@style/bottomSheetDialogTheme</item>
    </style>

    <!-- activity transition animation -->
    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <!--    custom themes    -->
    <style name="darkTheme">
        <item name="pageBgColor">@color/colorBlack</item>

        <item name="buttonBgColor">@color/colorPrimaryDark</item>
        <item name="buttonTextColor">@color/colorWhite</item>

        <item name="inputFieldBgColor">@color/colorGray</item>

        <item name="checkboxBorderColor">@color/colorPrimaryDark</item>

        <item name="primaryTextColor">@color/colorWhite</item>
        <item name="subTextColor">@color/subTextColor</item>
        <item name="titleTextColor">@color/colorPrimaryDark</item>

        <item name="cardBgColor">@color/colorBlack</item>
        <item name="cardPrimaryTextColor">@color/colorWhite</item>
        <item name="cardSubTextColor">@color/subTextColor</item>
        <item name="cardStrokeColor">@color/colorGray</item>

        <item name="bottomBarBgColor">@color/colorPrimary</item>
        <item name="fabBgColor">@color/colorPrimary</item>
    </style>

    <style name="lightTheme" parent="AppTheme">
        <item name="pageBgColor">@color/colorWhite</item>

        <item name="buttonBgColor">@color/colorPrimaryDark</item>
        <item name="buttonTextColor">@color/colorWhite</item>

        <item name="inputFieldBgColor">@color/colorGray</item>

        <item name="checkboxBorderColor">@color/colorPrimaryDark</item>

        <item name="primaryTextColor">@color/colorBlack</item>
        <item name="subTextColor">#6A000000</item>
        <item name="titleTextColor">@color/colorPrimaryDark</item>

        <item name="cardBgColor">@color/colorWhite</item>
        <item name="cardPrimaryTextColor">@color/colorBlack</item>
        <item name="cardSubTextColor">#6A000000</item>
        <item name="cardStrokeColor">@color/colorGray</item>

        <item name="bottomBarBgColor">@color/colorPrimary</item>
        <item name="fabBgColor">@color/colorPrimary</item>
    </style>

    <style name="classicTheme">
        <item name="pageBgColor">@drawable/background_gradient</item>

        <item name="buttonBgColor">@color/colorPrimaryDark</item>
        <item name="buttonTextColor">@color/colorWhite</item>

        <item name="inputFieldBgColor">@color/colorGray</item>

        <item name="checkboxBorderColor">@color/colorPrimaryDark</item>

        <item name="primaryTextColor">@color/colorBlack</item>
        <item name="subTextColor">#6A000000</item>
        <item name="titleTextColor">@color/colorPrimaryDark</item>

        <item name="cardBgColor">@color/colorWhite</item>
        <item name="cardPrimaryTextColor">@color/colorBlack</item>
        <item name="cardSubTextColor">#6A000000</item>
        <item name="cardStrokeColor">@color/colorGray</item>

        <item name="bottomBarBgColor">@color/colorPrimary</item>
        <item name="fabBgColor">@color/colorPrimary</item>
    </style>

    <!--  collapsing toolbar tile style  -->
    <style name="exp_toolbar_title" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="coll_toolbar_title" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--    Textview Style-->
    <style name="textViewTitle1Style" parent="defaultTextViewStyle">
        <item name="android:textSize">@dimen/textview_title1_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textViewTitle2Style" parent="textViewTitle1Style">
        <item name="android:textSize">@dimen/textview_title2_text_size</item>
    </style>

    <style name="textViewTitle3Style" parent="textViewTitle1Style">
        <item name="android:textSize">@dimen/textview_title3_text_size</item>
    </style>

    <style name="textViewTitle4Style" parent="textViewTitle1Style">
        <item name="android:textSize">@dimen/textview_title4_text_size</item>
    </style>

    <style name="textViewSubTitle1Style" parent="defaultTextViewStyle">
        <item name="android:textSize">@dimen/textview_subtitle1_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?subTextColor</item>
    </style>

    <style name="textViewSubTitle3Style" parent="textViewSubTitle1Style">
        <item name="android:textSize">@dimen/textview_subtitle3_text_size</item>
    </style>

    <style name="textViewSubTitle4Style" parent="textViewSubTitle1Style">
        <item name="android:textSize">@dimen/textview_subtitle4_text_size</item>
    </style>

    <style name="largeTextViewStyle" parent="defaultTextViewStyle">
        <item name="android:fontFamily">@font/andada</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/textview_large_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="defaultTextViewStyle" parent="matchParentWrapContent">
        <item name="android:textColor">?primaryTextColor</item>
        <item name="android:textSize">@dimen/textview_standard_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="buttonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/default_10</item>
        <item name="android:padding">@dimen/default_10</item>
        <item name="backgroundTint">?buttonBgColor</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?buttonTextColor</item>
        <item name="android:textSize">@dimen/button_default_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="editTextStyle" parent="matchParent">
        <item name="android:background">@drawable/round_edittext</item>
        <item name="android:drawablePadding">@dimen/very_small_5</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="matchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="matchParentWrapContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--    Bottom Sheet Style-->
    <style name="bottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/modalSheetStyle</item>
    </style>

    <style name="modalSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="switchStyle" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorWhite</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="cardStyle" parent="CardView">
        <item name="cardBackgroundColor">?cardBgColor</item>
        <item name="cardCornerRadius">@dimen/default_10</item>
        <item name="cardElevation">@dimen/very_small_5</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="strokeColor">?cardStrokeColor</item>
        <item name="strokeWidth">1dp</item>

    </style>

    <style name="cardPrimaryTextStyle" parent="defaultTextViewStyle">
        <item name="android:textColor">?cardPrimaryTextColor</item>
    </style>

    <style name="cardSubTextStyle" parent="defaultTextViewStyle">
        <item name="android:textColor">?cardSubTextColor</item>
    </style>

    <style name="fabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">?fabBgColor</item>
        <item name="tint">@color/colorWhite</item>
        <item name="elevation">@dimen/default_10</item>
        <item name="fabSize">normal</item>
    </style>
</resources>
